<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.anji.cdac_discussion.Home_Activity"
    android:background="@drawable/hq_blue_abstract_wallpaper">

    <TextView


        android:text=" WELCOME TO CDAC DISCUSSION FORUM  "
        android:singleLine="true"
        android:scrollHorizontally="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:id="@+id/textView"
        android:padding="5dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textSize="30dp"
        android:textColor="#d30707"
        android:textAlignment="center"

        />

    <ViewFlipper
        android:id="@+id/images"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/textView"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/cdacknowledgepark"/>

        <ImageView
            android:id="@+id/image2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/cdaclogotransp"/>


    </ViewFlipper>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="ABOUT CDAC"
        android:id="@+id/btn_aboutcdac"
        android:layout_below="@+id/images"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:background="#d94f4f" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="DISCUSSION"
        android:id="@+id/btn_discussion"
        android:layout_below="@+id/btn_aboutcdac"
        android:layout_alignLeft="@+id/btn_aboutcdac"
        android:layout_alignStart="@+id/btn_aboutcdac"
        android:layout_marginTop="10dp"
        android:background="#d94f4f" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="EXIT"
        android:id="@+id/btn_exit"
        android:layout_below="@+id/btn_discussion"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#d94f4f" />

</RelativeLayout>
